# ========================
# DATABASE SETTINGS
# ========================

# Local testing with SQLite
DB_DIALECT=sqlite
DB_STORAGE=database.sqlite       # Local SQLite file for dev/test
DB_NAME=casino_db
DB_USER=
DB_PASS=
DB_HOST=localhost

# Production (MongoDB Atlas)
# Uncomment for production deployment
# DB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/playtimeusa?retryWrites=true&w=majority

# ========================
# JWT SETTINGS
# ========================

# Secret key for vouchers, QR login, token authentication
JWT_SECRET=supersecretkey123    # Change to something strong

# Token expiration (optional)
JWT_EXPIRES_IN=7d               # e.g., 7 days

# ========================
# FRONTEND URL
# ========================

# Used for QR code login links
FRONTEND_URL=http://localhost:3000   # Local dev
# FRONTEND_URL=https://playtimeusa.net  # Production

# ========================
# APP SETTINGS
# ========================

PORT=3000                      # Backend server port
LOG_LEVEL=info                  # Logging level (info/debug/error)

# ========================
# AGENT/ADMIN SETTINGS
# ========================

# Default admin user credentials (change for production)
ADMIN_EMAIL=admin@playtimeusa.net
ADMIN_PASSWORD=admin123

# ========================
# OTHER SETTINGS
# ========================

# Enable debugging
DEBUG=true

